<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="350dp"
    android:layout_gravity="center"
    android:columnCount="5"
    android:rowCount="5">

    <Button
        android:text="1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_row="0"
        android:layout_column="0"></Button>

    <Button
        android:text="6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="2"></Button>

    <Button
        android:text="2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_row="1"
        android:layout_column="1"></Button>

    <Button
        android:text="7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_row="1"
        android:layout_column="3"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="2"></Button>

    <Button
        android:text="3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_row="2"
        android:layout_column="2"></Button>

    <Button
        android:text="8"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_row="2"
        android:layout_column="4"
        android:layout_gravity="fill_vertical"
        android:layout_rowSpan="2"></Button>
    <Button
        android:text="9"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="fill_vertical|fill_horizontal"
        android:layout_columnSpan="2"
        android:layout_rowSpan="2"></Button>

    <Button
        android:text="4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_row="3"
        android:layout_column="3"></Button>


    <Button
        android:text="5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_row="4"
        android:layout_column="4"></Button>

    <Button
        android:text="5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="3"></Button>
</GridLayout>